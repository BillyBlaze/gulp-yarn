{
    "name": "gulp-yarn",
    "version": "2.0.0-beta.1",
    "description": "Automatically install node modules using Yarn.",
    "main": "lib/index.js",
    "typings": "index.d.ts",
    "scripts": {
        "test": "istanbul cover _mocha -- test/test.js -R spec",
        "lint": "xo src/**/*.js",
        "lint:fix": "xo src/**/*.js --fix",
        "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0",
        "commit": "git-cz",
        "build": "gulp"
    },
    "repository": {
        "type": "git",
        "url": "git://github.com/warapitiya/gulp-yarn.git"
    },
    "keywords": [
        "gulpplugin",
        "yarn",
        "yarnpkg",
        "gulp",
        "install"
    ],
    "author": "Malindu Warapitiya <warapitiya93@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/warapitiya/gulp-yarn/issues"
    },
    "homepage": "https://github.com/warapitiya/gulp-yarn",
    "dependencies": {
        "async": "^2.5.0",
        "gulp-util": "^3.0.8",
        "through2": "^2.0.3",
        "which": "^1.3.0"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "chai": "^4.1.2",
        "commitizen": "^2.9.6",
        "conventional-changelog-cli": "^1.3.4",
        "coveralls": "^2.13.1",
        "cz-conventional-changelog": "^2.0.0",
        "gulp": "^3.9.1",
        "gulp-babel": "^7.0.0",
        "istanbul": "1.1.0-alpha.1",
        "mocha": "^4.0.1",
        "mock-spawn": "^0.2.6",
        "vinyl": "^2.1.0",
        "xo": "^0.18.2"
    },
    "xo": {
        "envs": [
            "node"
        ],
        "globals": [],
        "rules": {
            "unicorn/filename-case": [
                "error",
                {
                    "case": "camelCase"
                }
            ]
        }
    },
    "directories": {
        "test": "test"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
